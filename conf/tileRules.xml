<?xml version="1.0"?>
<!DOCTYPE tileRules SYSTEM "dtd/tileRules.dtd">
<!-- $Id$ -->
<tileRules>
    <rule name="default"/>
    <rule name="water" cantwalkon="all" swimable="true" sailable="true"/>
    <rule name="shallows" cantwalkon="all" swimable="true"/>
    <rule name="swamp" speed="slow" effect="poison"/>
    <rule name="grass" canlandballoon="true" replacement="true"/>
    <rule name="brush" speed="vslow" replacement="true"/>
    <rule name="hills" speed="vvslow" replacement="true"/>
    <rule name="mountains" cantwalkon="all" unflyable="true" monsterunwalkable="true"/>
    <rule name="lcb" cantwalkon="all" monsterunwalkable="true"/>
    <rule name="lcb_entrance" cantwalkon="south" cantwalkoff="north" monsterunwalkable="true"/>
    <rule name="ship" ship="true" monsterunwalkable="true"/>
    <rule name="horse" horse="true" monsterunwalkable="true"/>
    <rule name="floors" replacement="true"/>
    <rule name="balloon" balloon="true" monsterunwalkable="true"/>
    <rule name="person" cantwalkon="all"/>
    <rule name="solid" cantwalkon="all"/>
    <rule name="solid_attackover" cantwalkon="all" canattackover="true"/>
    <rule name="walls" cantwalkon="all" unflyable="true"/>
    <rule name="locked_door" cantwalkon="all" lockeddoor="true"/>
    <rule name="door" cantwalkon="all" door="true"/>
    <rule name="chest" chest="true"/>
    <rule name="poison_field" effect="poisonField" dispel="true"/>
    <rule name="energy_field" cantwalkon="all" effect="electricity" monsterunwalkable="true" unflyable="true" dispel="true"/>
    <rule name="fire_field" speed="vvslow" effect="fire" dispel="true"/>
    <rule name="sleep_field" effect="sleep" dispel="true"/>
    <rule name="lava" effect="lava"/>
    <rule name="signs" cantwalkon="all" talkover="true"/>
    <rule name="spacers" cantwalkon="all"/>
    <rule name="monster" cantwalkon="all"/>    

    <!-- Dungeon tile rules -->
    <rule name="dng_altar" monsterunwalkable="true"/>
    <rule name="dng_door" cantwalkon="retreat"/>
    <rule name="dng_room" monsterunwalkable="true" cantwalkon="retreat"/>
</tileRules>
